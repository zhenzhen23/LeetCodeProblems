//time: O(n)
//space: O()

class Solution {
    public boolean validMountainArray(int[] arr) {
        
        int l = arr.length;
        
        int start = 0, end = l - 1;
        
        while(start < l-1 && arr[start] < arr[start + 1]){
            start++;
        }
        
        while(end > 0 && arr[end] < arr[end - 1]){
            end--;
        }
        return start == end && start !=0 && end != l -1;
    }
}
